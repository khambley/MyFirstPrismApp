<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstPrismApp.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Label Text="Welcome to my First Prism App!" FontSize="Medium" />
        <Button Text="Navigate to speak page" Command="{Binding NavigateToSpeakPageCommand}" />
        <Button Text="Go to videos" Command="{Binding NavigateToVideoPlayerCommand}" />
    </StackLayout>

</ContentPage>